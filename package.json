{
  "name": "react",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start": "concurrently --kill-others-on-fail --prefix \"{name}\" --prefix-colors \"green,blue\" --pad-prefix --names \"[SSR],[API]\" \"npm:dev\"",
    "start:watch": "concurrently --kill-others-on-fail --prefix \"{name}\" --prefix-colors \"green,blue\" --pad-prefix --names \"[SSR],[API]\" \"npm:dev:watch\" \"npm:api\"",
    "dev": "dotenv -- tsx watch ./src/server/ssr/index.ts",
    "dev:watch": "dotenv -v APP_MODE=watch -- tsx watch ./src/server/ssr/index.ts",
    "dev:ssr": "dotenv -- tsx watch ./src/server/ssr/index.ts",
    "api": "dotenv -- tsx watch ./src/server/api/index.ts",
    "build": "npm run build:client && npm run build:ssr",
    "build:client": "vite build --outDir dist/client",
    "build:ssr": "vite build --ssr ./src/client/entryServer.tsx --outDir dist/server",
    "build:ci": "tsc -b && vite build",
    "lint": "eslint .",
    "e2e": "dotenv -- npm run build && NODE_ENV=test APP_MODE=test tsx watch ./src/server/ssr/index.ts",
    "test:unit": "vitest run",
    "test:unit:update": "vitest run -u",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "dotenv -- playwright test",
    "test:e2e:debug": "dotenv -v IS_E2E_TEST_DEBUG_MODE=true -- playwright test",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.20",
    "@types/cors": "^2.8.19",
    "clsx": "^2.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "http-status-codes": "^2.3.0",
    "immer": "^11.1.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router": "^7.13.0",
    "sirv": "^3.0.2",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^5.0.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.0",
    "@storybook/addon-docs": "^10.2.0",
    "@storybook/react-vite": "^10.2.0",
    "@tanstack/eslint-plugin-query": "^5.91.3",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/browser": "4.0.18",
    "@vitest/coverage-v8": "^4.0.1",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^10.2.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.1.0",
    "happy-dom": "^20.3.7",
    "msw": "^2.12.7",
    "playwright": "^1.58.0",
    "storybook": "^10.2.0",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vite-plugin-svgr": "^4.5.0",
    "vitest": "^4.0.1"
  },
  "msw": {
    "workerDirectory": [
      "./",
      "./mocks"
    ]
  }
}