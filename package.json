{
  "name": "react",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start": "concurrently --kill-others-on-fail --prefix \"{name}\" --prefix-colors \"green,blue\" --pad-prefix --names \"[FRONT],[SSR],[SERVICE]\" \"npm:dev\" \"npm:dev:ssr\"",
    "dev": "dotenv -e .env vite",
    "dev:ssr": "tsx watch ./src/server/index.ts",
    "dev:service": "tsx watch ./src/server/index.ts",
    "build": "tsc -b && vite build",
    "build:ssr": "actions to build ssr",
    "build:service": "actions to build service",
    "lint": "eslint .",
    "preview": "vite preview",
    "test:unit": "vitest run",
    "test:unit:update": "vitest run -u",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "dotenv -e .env playwright test",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.2",
    "@types/cors": "^2.8.19",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "http-status-codes": "^2.3.0",
    "immer": "^10.1.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/react-vite": "^9.1.10",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^9.1.10",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.4.0",
    "happy-dom": "^20.0.0",
    "msw": "^2.11.5",
    "playwright": "^1.56.0",
    "storybook": "^9.1.10",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "msw": {
    "workerDirectory": [
      "./",
      "./mocks"
    ]
  }
}